<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CleanSlate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/secondary_text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/primary_background_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>

        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="SecondaryTextStyle" parent="Theme.CleanSlate">
        <item name="android:textColor">@color/secondary_text_light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ToolbarTextStyle" parent="Theme.CleanSlate">
        <item name="android:textColor">@color/secondary_text_light</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonStyle" parent="Theme.CleanSlate">
        <item name="colorPrimary">@color/secondary_background_light</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.CleanSlate">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">16dp</item>
        <item name="colorControlActivated">@color/green_light</item>
    </style>
</resources>